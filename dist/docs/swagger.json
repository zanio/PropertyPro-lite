      "get": {
        "tags": [
          "Properties"
        ],
        "summary": "Get specific types of a properties",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "description": "property type. e.g flat,mini-flat",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
